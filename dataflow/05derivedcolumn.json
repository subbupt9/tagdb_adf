{
	"name": "05derivedcolumn",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "AzureSqlTable1",
						"type": "DatasetReference"
					},
					"name": "source1"
				},
				{
					"dataset": {
						"referenceName": "AzureSqlTable10",
						"type": "DatasetReference"
					},
					"name": "source2"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "AzureSqlTable46",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn1"
				},
				{
					"name": "derivedColumn2"
				},
				{
					"name": "union1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Sno as integer,",
				"          StoreName as string,",
				"          Year as integer,",
				"          Sales as double",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     query: 'select * from [dbo].[Foreach_input]',",
				"     format: 'query') ~> source1",
				"source(output(",
				"          Sno as integer,",
				"          StoreName as string,",
				"          Year as integer,",
				"          Sales as double",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     query: 'select * from [dbo].[Foreach_input1]',",
				"     format: 'query') ~> source2",
				"source1 derive(TableNameDC = \"Foreach_input\",",
				"          TimestampDC = currentUTC()) ~> derivedColumn1",
				"source2 derive(TableNameDC = \"Foreach_input2\",",
				"          TimestampDC = currentUTC()) ~> derivedColumn2",
				"derivedColumn1, derivedColumn2 union(byName: true)~> union1",
				"union1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          Sno as integer,",
				"          StoreName as string,",
				"          Year as integer,",
				"          Sales as double,",
				"          Tablename as string,",
				"          Timestamp as timestamp",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError',",
				"     mapColumn(",
				"          Sno,",
				"          StoreName,",
				"          Year,",
				"          Sales,",
				"          Tablename = TableNameDC,",
				"          Timestamp = TimestampDC",
				"     )) ~> sink1"
			]
		}
	}
}